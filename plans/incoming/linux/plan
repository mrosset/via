name="linux"
version="2.6.39.3"
source="ftp://ftp.kernel.org/pub/linux/kernel/v2.6/linux-$version.tar.bz2"
build_name=""
build="custom_build"
build_args=""
install="custom_install"
install_args=""
verify="sha_verify"
verify_args="324bd8bde3929be5d9c33e262d8ca197a45e7e2587b7c5703a7004d78901a8d3"

custom_build() {
	cp $plan_dir/config .config
	make
}

custom_install() {
	mkdir -p $DESTDIR/boot
	cp arch/x86_64/boot/bzImage $DESTDIR/boot/vmlinuz-$version-vanilla
	cp System.map $DESTDIR/boot/System.map-$verson
	make INSTALL_MOD_PATH=$DESTDIR modules_install || true
}
