name="colormake"
version="0.2"
source="http://bre.klaki.net/programs/colormake/colormake-$version.tar.gz"
verify="8e7cc49acbc2b9b52ce2d87993f709e6813f0ba3aff0b0bbe7630c3a24aff969"
builder="no_build"
packager="custom_install"

custom_install() {
	for i in colormake.pl cmake clmake; do
		install -Dm 755 $i $DESTDIR/usr/bin/$i
	done
}
