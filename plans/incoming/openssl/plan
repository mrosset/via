name="openssl"
version="1.0.0d"
source="https://www.openssl.org/source/openssl-$version.tar.gz"
builder="custom_build"
packager="custom_package"
verify="92511d1f0caaa298dba250426f8e7d5d00b271847886d1adc62422778d6320db"

custom_build() {
	./Configure linux-x86_64 --prefix=$PREFIX --libdir=lib --openssldir=/etc/ssl \
		shared shared zlib enable-md2 -Wa,--noexecstack
	MAKEFLAGS="-j1" make
}

custom_package() {
	MAKEFLAGS="-j1" make INSTALL_PREFIX=$DESTDIR MANDIR=$PREFIX/share/man install
}
