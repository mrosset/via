name="xvidcore"
version="1.3.2"
source="http://downloads.xvid.org/downloads/xvidcore-1.3.2.tar.bz2"
build_name="xvidcore"
build="custom_build"
build_args=""
install="custom_install"
install_args=""
verify="sha_verify"
verify_args="d6c11334e1e771f9e4722eff454762325fd0989f6a4217abca296d6770160bf4"

custom_build() {
	_pushd build/generic
		./configure  $confargs
		make
	_popd
}

custom_install() {
	_pushd build/generic
		gnu_install
	_popd
}
