name="unrar"
version="4.0.7"
source="http://www.rarlab.com/rar/unrarsrc-4.0.7.tar.gz"
build_name="unrar"
build="custom_build"
build_args=""
install="custom_install"
install_args=""
verify="sha_verify"
verify_args="eac9ed7493870ca7f67b23e9208aef1db701c381123ac462e97f703777a33071"

custom_build() {
  make -f makefile.unix
}

custom_install() {
	install -Dm755 unrar ${DESTDIR}/usr/bin/unrar
	# install license
	install -Dm644 license.txt "${DESTDIR}/usr/share/licenses/${name}/LICENSE"
}
