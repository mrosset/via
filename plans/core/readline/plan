name="readline"
version="6.2"
source="http://mirrors.kernel.org/gnu/$name/$name-$version.tar.gz"
build_name=""
build="gnu_build"
build_args="--libdir=/lib"
install="custom_install"
install_args=""
verify="gnu_verify"

export SHLIB_LIBS=-lncurses

custom_install() {
	gnu_install
	mkdir -p $DESTDIR/usr/lib
	cd $DESTDIR
	mv -v lib/lib{readline,history}.a $DESTDIR/usr/lib
	rm -v lib/lib{readline,history}.so
	ln -sfv ../../lib/libreadline.so.6 $DESTDIR/usr/lib/libreadline.so
	ln -sfv ../../lib/libhistory.so.6 $DESTDIR/usr/lib/libhistory.so
}
