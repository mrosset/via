name="ncurses"
version="5.9"
source="http://ftp.gnu.org/pub/gnu/ncurses/ncurses-$version.tar.gz"
build_name=""
build="gnu_build"
build_args="--with-shared --enable-widec"
install="custom_install"
install_args=""
verify="gnu_verify"

custom_install() {
	gnu_install
	make distclean
	build_args="--with-shared"
	gnu_build
	gnu_install
}
