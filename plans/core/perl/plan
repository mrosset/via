name="perl"
version="5.14.1"
source="http://www.cpan.org/src/5.0/$name-$version.tar.bz2"
verify="29b4a7e7c22d4a980ab9eb1ea486c5c4ee9ec533192a1ce8f3fe9ae32fb1f862"

custom_build() {
	patch -Np1 -i $sources/perl-5.14.0-libc-1.patch || true
	sed -i 's@/usr/include@/tools/include@g' ext/Errno/Errno_pm.PL
	./configure.gnu --prefix=/$PREFIX -Dcc="gcc"
}
