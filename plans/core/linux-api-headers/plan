name="linux-api-headers"
version="3.0"
source="http://www.kernel.org/pub/linux/kernel/v3.0/linux-$version.tar.bz2"
build_name="linux-3.0"
builder="custom_build"
packager="custom_package"
verify="sign_verify"

custom_build() {
	make mrproper
	make headers_check
}

custom_package() {
	make INSTALL_HDR_PATH=$DESTDIR/usr headers_install
}
