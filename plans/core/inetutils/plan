name="inetutils"
version="1.8"
source="http://mirrors.kernel.org/gnu/$name/$name-$version.tar.gz"
build_name=""
build="gnu_build"
build_args="--libexecdir=/usr/sbin \
--localstatedir=/var --disable-ifconfig \
--disable-logger --disable-syslogd --disable-whois \
--disable-servers --with-pam"
install="gnu_install"
install_args=""
verify="gnu_verify"

post_install() {
	mkdir $DESTDIR/{bin,sbin}
	mv -v $DESTDIR/usr/bin/{hostname,ping,ping6} $DESTDIR/bin
	mv -v $DESTDIR/usr/bin/traceroute $DESTDIR/sbin
}
