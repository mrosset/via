name="glew"
version="1.6.0"
source="http://downloads.sourceforge.net/glew/glew-1.6.0.tgz"
install_args=""
verify="bea2a7e9bb97a7a5054d4a65d16aaeedeaa091719359ad3fcd9bfdb0fe8eb7fa"

custom_build() {
	sed -i 's|lib64|lib|' config/Makefile.linux
	gnu_make
}

custom_install() {
	GLEW_DEST=$DESTDIR/usr gnu_package
}
