name="dtach"
version="0.8"
source="http://downloads.sourceforge.net/sourceforge/dtach/dtach-$version.tar.gz"
verify="16614ebddf8ab2811d3dc0e7f329c7de88929ac6a9632d4cb4aef7fe11b8f2a9"
packager="custom_package"

custom_package() {
  install -Dm755 dtach "${DESTDIR}/$PREFIX/bin/dtach"
  install -Dm644 $stages/$build_name/dtach.1 \
	  "${DESTDIR}/$PREFIX/share/man/man1/dtach.1"
}
